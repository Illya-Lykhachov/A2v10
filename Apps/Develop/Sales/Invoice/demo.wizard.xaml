<!-- Demo wizard -->
<Wizard xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml" 
		Title="Wizard demo" Width="600" Height="400">
	<WizardPage Header="Step # 1">
		<Grid>
			<TextBox Label="Name" Value="{Bind Agent.Name}"/>
		</Grid>
	</WizardPage>
	<WizardPage Header="Step # 2">
		<Grid>
			<TextBox Label="Code" Value="{Bind Agent.Code}"/>
		</Grid>
	</WizardPage>
	<WizardPage Header="Step # 3">
		<Paragraph>
			Paragraph text here
			<Span Bold="True">Span Bold text</Span>
			Paragraph text here
			<Hyperlink>Hyperlink</Hyperlink>
			<Break />
			Paragraph text here
			<Span Italic="True">Span Italic text</Span>
			<Line/>
			Paragraph text here
		</Paragraph>
	</WizardPage>
</Wizard>

    