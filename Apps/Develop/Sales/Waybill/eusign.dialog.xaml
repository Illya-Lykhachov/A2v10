<!-- EUSign  -->
<Dialog xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml" 
	Title="Електронний підпис" Width="800">
	<Dialog.Buttons>
		<Button Content="Закрити" Command="{BindCmd Close}" />
	</Dialog.Buttons>
	<EUSignFrame Height="500">
		<Grid Columns="1*, 1*, 150">
			<Header Grid.ColSpan="3" >Підписати документ</Header>
			<UploadFile Value="{Bind Attachment.$File}"/>
			<TextBox Label="Пароль на ключ" Password="True" Placeholder="Введіть пароль на ключ" Value="{Bind Attachment.$Password}">
				<TextBox.Hint>
					Пароль та ключ ніколи не передаються на сервер. Вони залишаються на цьому компьютері
				</TextBox.Hint>
			</TextBox>
			<Button Content="Зчитати ключ" Size="Small" Icon="Security" Style="Primary"
					Command="{BindCmd Execute, CommandName='readKey' }"/>
			<Code Content="{Bind Attachment}">
				
			</Code>
			<Button Icon="FileSignature" Content="Підписати документ" Command="{BindCmd Execute, CommandName=signFile}"/>
		</Grid>
	</EUSignFrame>
</Dialog>
