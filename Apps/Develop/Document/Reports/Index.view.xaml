<!-- Demo page -->
<Page xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml">
    <List ItemsSource="{Bind Reports}" Style="ThreeColumnsGrid">
        <ListItem Icon="FilePreview" Content="{Bind Name}" Padding="6,0">
            <ListItem.Header>
                <Hyperlink Content="{Bind Name}" Bold="True"
                    Command="{BindCmd Open, Url='/Document/Reports/Show', Argument={Bind Id}, NewWindow=True}" />
            </ListItem.Header>
        </ListItem>
    </List>
    
    <!--
    -->
</Page>

    