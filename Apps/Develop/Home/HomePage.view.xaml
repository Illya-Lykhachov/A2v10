<!-- Home Page -->
<Page xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml"
		Title="Home page title" Background="WhiteSmoke" >
	<Grid Rows="1*, 2*" Columns="Auto, Auto, Auto">
		<Block Grid.Row="1" Grid.Col="1"></Block>
		<Block Grid.Row="2" Grid.Col="2"></Block>
		<Block Grid.Row="1" Grid.Col="2"></Block>
		<Block Grid.Row="2" Grid.Col="1"/>
		<Block Grid.Row="1" Grid.Col="3"/>
		<Button Grid.Row="3" Grid.Col="1" Icon="Approve" Command="{BindCmd Reload}">Button</Button>
		<Grid Grid.Row="3" Grid.Col="2">
			<Button Grid.Row="1" Grid.Col="1" Icon="Gear" >Button inside</Button>
		</Grid>
	</Grid>
</Page>

    