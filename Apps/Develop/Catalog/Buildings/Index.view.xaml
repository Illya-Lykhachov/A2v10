<!-- Demo page -->
<Page xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Splitter>
		<Block Splitter.Width="200px">
			<Text>Это левая панель сплиттера</Text>
		</Block>

		<TabPanel FixedHeader="True" Border="True">
			<Tab Header="Задачи">
				<Text>Задачи</Text>
			</Tab>
			<Tab Header="Контрагенты">
				<Toolbar>
					<Button Icon="Reload"></Button>
				</Toolbar>
				<DataGrid GridLines="Both">
					<DataGridColumn Header="Код"/>
					<DataGridColumn Header="Название"/>
					<DataGridColumn Header="Примечание"/>
				</DataGrid>
			</Tab>
		</TabPanel>
	</Splitter>
</Page>

    